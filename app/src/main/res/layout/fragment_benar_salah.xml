<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BenarSalahFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/BSImageViewJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="30dp"
                android:contentDescription="Belajar Islam Metode Kuis"
                app:srcCompat="@drawable/ic_logo_text" />

            <TextView
                android:id="@+id/BStextViewTipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Kuis Benar Salah"
                android:textColor="#03202E"
                android:textSize="30sp" />

            <Button
                android:id="@+id/BSButtonAqidah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ic_button_blue"
                android:drawableStart="@drawable/aqidah"
                android:padding="20dp"
                android:text="AQIDAH"
                android:textColor="#FFFFFF"
                android:textSize="48sp" />

            <Button
                android:id="@+id/BSButtonFiqh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ic_button_red"
                android:drawableStart="@drawable/fiqh"
                android:padding="20dp"
                android:text="FIQH"
                android:textColor="#FFFFFF"
                android:textSize="48sp" />

            <Button
                android:id="@+id/BSButtonSiroh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ic_button_green"
                android:drawableStart="@drawable/siroh"
                android:padding="20dp"
                android:text="SIROH"
                android:textColor="#FFFFFF"
                android:textSize="48sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>