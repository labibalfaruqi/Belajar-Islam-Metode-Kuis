<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartPlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/SPButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_gravity="start|center_vertical"
            app:srcCompat="@drawable/ic_arrow_back"
            android:background="#00000000"
            android:layout_marginStart="10dp"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/SPButtonMilihLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:backgroundTint="@color/biru_figma"
            android:drawableStart="@drawable/ic_level_choice"
            android:text="Level"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/SPTextViewJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pilihan Ganda"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/SPTextViewJudulMateri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Materi X"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginTop="5dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="100dp"
    >

    <TextView
        android:id="@+id/SPTextViewJudulLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Level 1"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/SPButtonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Button"
        android:src="@drawable/ic_play_arrow"
        android:background="@drawable/bg_roundedcorner_blue"/>
</LinearLayout>
</LinearLayout>